{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
     "outDir": "./dist", 
     "baseUrl": "./src", 
     "paths": { // aqui Ã© o caminho dos modules versus pastas
      "@modules/*":["modules/*"], 
      "@shared/*":["shared/*"], 
      "@utils/*":["utils/*"],
      "@errors/*":["shared/errors/*"]
     }, 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
